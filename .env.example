# Application Configuration
APP_NAME=AI Tool Recommender Chatbot
APP_VERSION=1.0.0

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
TOP_K_RESULTS=5

# FAISS Configuration
FAISS_INDEX_TYPE=IndexFlatIP  # Inner Product (for normalized vectors)

# Data Configuration
DATA_SOURCE=sample  # Options: sample, csv, api
DATA_PATH=./data/ai_tools.csv

# Optional: External AI Tools Dataset
# To use the full AIToolBuzz dataset, download from:
# https://github.com/SayedTahsin/AIToolBuzz-Dataset
# and place in ./data/ directory

# Logging
LOG_LEVEL=INFO

# Cache Configuration
ENABLE_MODEL_CACHE=true
ENABLE_DATA_CACHE=true
